<% include partials/header.ejs %>

<h1>Team Details</h1>

<form method="post">
    <div class="form-group">
        <label for="city" class="col-sm-2 control-label">City:</label>
        <input name="city" id="city" required />
    </div>

    <div class="form-group">
        <label for="nickname" class="col-sm-2 control-label">Nickname:</label>
        <input name="nickname" id="nickname" required />
    </div>

    <div class="form-group">
        <label for="wins" class="col-sm-2 control-label">Wins:</label>
        <input name="wins" id="wins" required type="number" min="0" />
    </div>

    <div class="form-group">
        <label for="losses" class="col-sm-2 control-label">Losses:</label>
        <input name="losses" id="losses" required type="number" min="0" />
    </div>

    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

<% include partials/footer.ejs %>